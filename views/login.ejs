  <body>
  <div>
<div class="display-1 text-center">Login</div>
<% if (messages.error) { %>
  <%= messages.error %>
<% } %>
<form class="container p-5 align-content-lg-center" action="/login" method="POST">
  <div class="p-1">
    <label for="email">Email</label><br>
    <input type="email" id="email" name="email" required>
  </div>
  <div class="p-1 ">
    <label for="password">Password</label><br>
    <input type="password" id="password" name="password" required>
  </div>
  <button class="p-1 bg-primary" type="submit">Login</button>
</form>
<a class="p-3" href="/register">Register</a>
</div>
</body>  
</html>